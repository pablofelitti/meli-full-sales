FROM node:12

COPY . ./meli-full-sales/

WORKDIR /meli-full-sales/

RUN npm install

ARG MELI_CRON
ENV MELI_CRON=$MELI_CRON

ARG TELEGRAM_BOT_TOKEN
ENV TELEGRAM_BOT_TOKEN=$TELEGRAM_BOT_TOKEN

ARG TELEGRAM_CHANNEL
ENV TELEGRAM_CHANNEL=$TELEGRAM_CHANNEL

ARG PGHOST
ENV PGHOST=$PGHOST

ARG PGDATABASE
ENV PGDATABASE=$PGDATABASE

ARG PGPASSWORD
ENV PGPASSWORD=$PGPASSWORD

ARG PGUSER
ENV PGUSER=$PGUSER

CMD npm run start

EXPOSE 3000